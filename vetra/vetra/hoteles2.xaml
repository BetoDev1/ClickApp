<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="vetra.hoteles2"
             Title="Click "
             BackgroundImageSource="bellav.jpg">
    <ContentPage.Content>
        <StackLayout>

            <Image Source="iconohotel.png"
               HorizontalOptions="Center"
               Margin="0,20,0,10"
              HeightRequest="100">
            </Image>

            <Button  Text="hoteles" FontSize="Medium" Margin="40,20,40,10" BackgroundColor="#003eeb" 
                TextColor="White" CornerRadius="10" Clicked="Button_Clicked"/>
            <Button Text="cabañas" FontSize="Medium" Margin="40,20,40,10" BackgroundColor="#003eeb" 
                TextColor="White" CornerRadius="10" Clicked="Button_Clicked_1"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>