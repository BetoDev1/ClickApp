    <StackLayout>

        <Image Source="logoclick.png"
               HorizontalOptions="Center"
               Margin="0,20,0,0"
               HeightRequest="150">
        </Image>

        <Image Source="ciudad.png"
               HorizontalOptions="Center"
               Margin="0,-30,0,-20"
              HeightRequest="100">
        </Image>

        <!--<Label Text="¿Qué pio Necesitas?"
               TextColor="White"
               FontSize="30"
               HorizontalTextAlignment="Center"
               
               HorizontalOptions="Center"
               Margin="0,30,0,0"
            
                        
        />



        <Label Text="Seleccioná una categoría y contactá al profesional que necesitás"
               TextColor="White"
               FontSize="15"
               FontFamily="Helvetica"
                              Margin="10,0,10,10"
               VerticalOptions="Center"
               HorizontalTextAlignment="Center"
               />-->



        <ScrollView
            Margin="15,0,15,0">

            <Grid x:Name="MainGrid">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.50*" />
                    <ColumnDefinition Width="0.50*" />
                    
                </Grid.ColumnDefinitions>

                <ImageButton 
                    x:Name="btnpag3"
                    Source="BELLAVISTA.png"
                    Aspect="AspectFill"
                    Grid.Row="0"
                    Grid.Column="0"
                    WidthRequest="120"
                    HeightRequest="{Binding Width, Source={x:Reference btnpag3}}"
                    Margin="5,5,5,5"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                
                    CornerRadius="50"
                    BackgroundColor="Transparent"
                   ></ImageButton>



                <ImageButton 
                    x:Name="btnpag4"
                    Source="GOYA.png"
                    Aspect="AspectFill"
                    Grid.Row="0"
                    Grid.Column="1"
                    WidthRequest="120"
                    HeightRequest="{Binding Width, Source={x:Reference btnpag4}}"
                    Margin="5,5,5,5"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    
                    CornerRadius="50"
                    BackgroundColor="Transparent"
                    ></ImageButton>

               
          

            </Grid>






        </ScrollView>

        <Image Source="personal.png"
               HorizontalOptions="Center"
               Margin="0,-10,0,10"
              HeightRequest="150">
        </Image>

        <Button BackgroundColor="OrangeRed"  TextColor="White"  Text="Sumate a click!" VerticalOptions="EndAndExpand" Margin="30,0,30,30"/>


    </StackLayout>
